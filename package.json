{
  "name": "catbot",
  "version": "0.0.1",
  "description": "A personal and lovably naughty matrix assistant",
  "main": "main.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/main.ts",
    "dev": "NODE_ENV=development.local nodemon -x node --no-warnings --loader ts-node/esm src/main.ts",
    "deploy": "NODE_ENV=production node src/main.ts"
  },
  "type":"module",
  "nodemonConfig": {
    "ignore": [
      "catbot.json"
    ]
  },
  "author": "Mark White-Robinson",
  "license": "GPL-2.0-only",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "matrix-bot-sdk": "^0.6.6",
    "mongodb": "^6.2.0",
    "mongoose": "^7.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "nodemon": "^3.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
